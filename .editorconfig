; -*- conf -*-
; EditorConfig is awesome: http://EditorConfig.org

root = true

; Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = false

[*.{md,markdown}]
indent_size = 4
tab_width = 4

[*.json]
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true

[Makefile]
indent_size = 4
indent_style = tab
tab_width = 4

[*.mk]
indent_size = 4
indent_style = tab
tab_width = 4

[*.py]
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true

[*.rs]
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true

[*.yml]
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

[*.toml]
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
